<section id="add" class="container">
    <div class="form-wrap">
        <h1>Add student</h1>
        {{#each errors}}
        <div class="error">
            <p>{{text}}</p>
        </div>
        {{/each}}
        <div>
            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Name</label>
                        <input type="email" class="form-control" id="inputEmail4" placeholder="Full Name">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">SSN</label>
                        <input type="password" class="form-control" id="inputPassword4" placeholder="SSN">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Number</label>
                        <input type="email" class="form-control" id="inputEmail4" placeholder="Number">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Phone Number</label>
                        <input type="password" class="form-control" id="inputPassword4" placeholder="Phone Number">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Birthday</label>
                        <input type="date" class="form-control" id="inputEmail4" placeholder="Birthday">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Sex</label>
                        <input type="password" class="form-control" id="inputPassword4" placeholder="Sex">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Major Department</label>
                        <input type="date" class="form-control" id="inputEmail4" placeholder="Major Department">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Minor Department</label>
                        <input type="password" class="form-control" id="inputPassword4" placeholder="Minor Department">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Current Address</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputCity">Class</label>
                        <select id="inputState" class="form-control">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputState">Degree program</label>
                        <select id="inputState" class="form-control">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>