<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="{{ avatarImage student.dataValues.sex }}" alt="" />
                    <div class="file btn btn-lg btn-primary">
                        Change Photo
                        <input type="file" name="file" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        {{ student.dataValues.name }}
                    </h5>
                    <h6>
                        Current Adress: {{ student.dataValues.current_address }}
                    </h6>
                    <br>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                                aria-controls="home" aria-selected="true">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-work">
                    <h5><i class="fa fa-arrows"></i> Section</h5>
                    <a href="">Semester: {{ student.dataValues.grade_report.dataValues.section.dataValues.semester}}</a><br />
                    <a href="">Year: {{ student.dataValues.grade_report.dataValues.section.dataValues.year}}</a><br />
                    <a href="">Number: {{ student.dataValues.grade_report.dataValues.section.dataValues.number}}</a><br />
                    <a href="">Room Number: {{ student.dataValues.grade_report.dataValues.section.dataValues.room_number}}</a><br />
                    <a href="">Building: {{ student.dataValues.grade_report.dataValues.section.dataValues.building}}</a><br />  
                </div>
                 <div class="profile-work">
                    <h5><i class="fa fa-arrows"></i> Courses</h5>
                    {{#each student.dataValues.grade_report.dataValues.section.dataValues.courses }}
                       <a href="">{{ dataValues.name}}</a><br />
                     {{/each}}
            
                </div>
            </div>
            <div class="col-md-8" style="margin-top: -10em;">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>SSN</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ student.dataValues.ssn }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Class</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ student.dataValues.class.dataValues.name }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Degree program</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ student.dataValues.degree_program.dataValues.name }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Name</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ student.dataValues.name }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Number</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ student.dataValues.number }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Phone Number</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ student.dataValues.phone_number }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Birthday</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ student.dataValues.birthday }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Current Adress</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ student.dataValues.current_address }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Sex</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ student.dataValues.sex }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Major department</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ student.dataValues.major_department }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Minor department</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ student.dataValues.minor_department }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Created at</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ formatDate student.dataValues.created_at }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <h2 class="center transcript-title">Transcript Report</h2>
                {{#if student.dataValues.grade_report}}
                    <div class="container">
                    <h4>Letter Grade</h4>
                    <p>{{student.dataValues.grade_report.dataValues.letter_grade}}</p>
                    <h4>Numeric Grade</h4>
                    <p>{{student.dataValues.grade_report.dataValues.numeric_grade}}</p>
                </div>
                {{/if }}
            </div>
        </div>
    </form>
</div>